<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Enable Night Mode">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="NIGHT"
            android:summaryOff="Night mode is deactivated"
            android:summaryOn="Night mode is activated"
            android:title="Night Mode" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Settings">
        <Preference
            android:title="Account Settings"
            android:key="Account Settings"
            android:summary="Change your Name, Username, Email and Password"
            />
    </PreferenceCategory>
</PreferenceScreen>